+        break;
+    case EXDEV:
+        SetLastError( ERROR_NOT_SAME_DEVICE );
+        break;
+    default:
+        WARN("unknown file error: %s\n", strerror(save_errno) );
+        SetLastError( ERROR_GEN_FAILURE );
+        break;
+    }
+    errno = save_errno;
