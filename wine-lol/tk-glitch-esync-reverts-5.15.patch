+                closedir( dir );
+                goto success;
+            }
+        }
+    }
+    closedir( dir );
+
+not_found:
+    unix_name[pos - 1] = 0;
+    return STATUS_OBJECT_PATH_NOT_FOUND;
+
+success:
+    if (is_win_dir && !stat( unix_name, &st )) *is_win_dir = is_same_file( &windir, &st );
+    return STATUS_SUCCESS;
+}
