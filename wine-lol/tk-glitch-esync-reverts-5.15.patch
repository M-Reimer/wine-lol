-int server_get_unix_fd( HANDLE handle, unsigned int wanted_access, int *unix_fd,
-                        int *needs_close, enum server_fd_type *type, unsigned int *options )
-{
-    sigset_t sigset;
-    obj_handle_t fd_handle;
-    int ret, fd = -1;
-    unsigned int access = 0;
