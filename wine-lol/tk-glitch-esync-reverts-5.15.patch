+    if (gdt_fs_sel) return;
+
+    server_enter_uninterrupted_section( &ldt_section, &sigset );
+    __wine_ldt_copy.flags[thread_data->fs >> 3] = 0;
+    server_leave_uninterrupted_section( &ldt_section, &sigset );
