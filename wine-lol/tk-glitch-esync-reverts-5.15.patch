-{
-    FILE *f;
-    DWORD r;
-
-    f = fopen(filename, "r");
-    if (!f) return FALSE;
-
-    while (!feof(f))
-    {
-        char op;
-        if (!fscanf(f, "%x%c ", &r, &op)) break;
-        *mask = (sizeof(ULONG_PTR)>sizeof(int) ? *mask << (8 * sizeof(DWORD)) : 0) + r;
