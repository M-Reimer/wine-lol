+static time_t find_dst_change(unsigned long min, unsigned long max, int *is_dst)
+{
+    time_t start;
+    struct tm *tm;
+
+    start = min;
+    tm = localtime(&start);
+    *is_dst = !tm->tm_isdst;
+    TRACE("starting date isdst %d, %s", !*is_dst, ctime(&start));
+
+    while (min <= max)
+    {
+        time_t pos = (min + max) / 2;
+        tm = localtime(&pos);
+
+        if (tm->tm_isdst != *is_dst)
+            min = pos + 1;
+        else
+            max = pos - 1;
+    }
+    return min;
+}
